<%- include('../partials/header') %> 
<div class="container">
<h3>Add Story</h3>
<div class="row">
    <form action="/stories/edit/<%=story._id%>?_method=PUT" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="<%=story.title %>">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Story:</h5>
                <textarea id="body" name="body"><%- story.body %></textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Update" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>
</div>

<script src="https://cdn.ckeditor.com/ckeditor5/36.0.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.getElementById('body'))
        .catch( error => {
            console.error( error );
        } );
</script>
<%- include('../partials/footer') %> 